<% provide(:title, "TOP") %>

<h1 class="title is-1">掲示板</h1>

  <% @boards.each do |board| %>
    <div class="box">
      <h4>タイトル:<%= link_to board.title, board_path(board) %></h4>
      <p>投稿主:<%= link_to board.user.name, user_path(board.user) %></p>
      <p>更新時間:<%= board.updated_at.strftime('%Y/%m/%d %H:%M') %></p>
    </div>
  <% end %>

  <%= paginate @boards %>